<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="tv.baokan.liuageandroid">

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.media.action.IMAGE_CAPTURE"/>

    <!-- 震动权限 -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <!-- ShareSDK -->
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <!-- Required -->
    <uses-permission android:name="tv.baokan.liuageandroid.permission.JPUSH_MESSAGE"/>
    <uses-permission android:name="android.permission.RECEIVE_USER_PRESENT"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <!-- Optional. Required for location feature -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/> <!-- 用于开启 debug 版本的应用在6.0 系统上 层叠窗口权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>

    <application
        android:name="tv.baokan.liuageandroid.app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 启动页 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!-- 首页 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 资讯详情 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.NewsDetailActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 图秀详情 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.PhotoDetailActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 登录 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.LoginActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 注册 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.RegisterActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 忘记密码 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.ForgotActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 协议 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.AgreementActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 资讯详情浏览器 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.PhotoBrowserActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 评论列表 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.CommentListActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 栏目管理 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.ColumnActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 关于我们 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.AboutUsActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 意见反馈 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.FeedbackActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 用户信息 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.UserInfoActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 修改资料 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.ModifyInfoActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 修改密码 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.ModifySafeInfoActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 收藏记录 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.CollectionRecordActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- 评论记录 -->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.CommentRecordActivity"
            android:screenOrientation="portrait">
        </activity>
        <!--搜索-->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.SearchActivity"
            android:screenOrientation="portrait">
        </activity>
        <!--搜索结果-->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.SearchResultActivity"
            android:screenOrientation="portrait">
        </activity>
        <!--广告软文-->
        <activity
            android:name="tv.baokan.liuageandroid.ui.activity.AdWebViewActivity"
            android:screenOrientation="portrait">
        </activity>
        <!-- ShareSDK -->
        <activity
            android:name="com.mob.tools.MobUIShell"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize">

            <!-- 腾讯 单独申请-->
            <intent-filter>
                <data android:scheme="tencent1106003864"/>

                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.BROWSABLE"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

            <!-- 调用新浪原生SDK，需要注册的回调activity -->
            <intent-filter>
                <action android:name="com.sina.weibo.sdk.action.ACTION_SDK_REQ_ACTIVITY"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- 微信分享回调 -->
        <activity
            android:name="tv.baokan.liuageandroid.wxapi.WXEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

        <!-- Required SDK 核心功能-->
        <!-- 可配置android:process参数将PushService放在其他进程中 -->
        <service
            android:name="cn.jpush.android.service.PushService"
            android:enabled="true"
            android:exported="false">
            <intent-filter android:priority="1000">
                <action android:name="cn.jpush.android.intent.REGISTER"/>
                <action android:name="cn.jpush.android.intent.REPORT"/>
                <action android:name="cn.jpush.android.intent.PushService"/>
                <action android:name="cn.jpush.android.intent.PUSH_TIME"/>
            </intent-filter>
        </service>

        <receiver
            android:name="tv.baokan.liuageandroid.receiver.NotificationReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="cn.jpush.android.intent.REGISTRATION"/> <!--Required  用户注册SDK的intent-->
                <action android:name="cn.jpush.android.intent.MESSAGE_RECEIVED"/> <!--Required  用户接收SDK消息的intent-->
                <action android:name="cn.jpush.android.intent.NOTIFICATION_RECEIVED"/> <!--Required  用户接收SDK通知栏信息的intent-->
                <action android:name="cn.jpush.android.intent.NOTIFICATION_OPENED"/> <!--Required  用户打开自定义通知栏的intent-->
                <action android:name="cn.jpush.android.intent.CONNECTION"/><!-- 接收网络变化 连接/断开 since 1.6.3 -->
                <category android:name="tv.baokan.liuageandroid"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>
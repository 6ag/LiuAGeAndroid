<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="tv.baokan.liuageandroid.ui.activity.AboutUsActivity">

    <!--导航栏-->
    <tv.baokan.liuageandroid.widget.NavigationViewPush
        android:id="@+id/nav_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </tv.baokan.liuageandroid.widget.NavigationViewPush>

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:id="@+id/srl_about_us_list_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nav_about_us"
        android:background="@color/colorAllBackgroundColor">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_about_us_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>

</RelativeLayout>
